<div class="main-panel l-row l-row--gap l-inner bg-color pt-8 px-4 sm:py-6">


    <div class="left-panel l-column l-column--3">
        <section class="stock-panel">
            <h3>未達成タスク</h3>
            <ul id="stock-list"></ul>
        </section>
    </div>

    <div class="right-panel l-column l-column--9 flex flex-col">
        {{!-- パネル上部 --}}
        <div class="l-row l-row--gap">
            <div class=" l-column l-column--8 bg-accent">

                {{!-- メモ表示部 --}}
                <div class="daily-todo py-4 px-4" aria-live="polite">
                    <p class="memo__preview-label">本日のやること</p>
                    <ul id="daily-list"></ul>
                    <button type="button" id="move-to-stock" class="memo__move py-4 px-4 rounded"><i
                            class="fa-solid fa-chevron-left"></i></button>
                </div>


            </div>


            {{!-- 作業コントロールパネル --}}
            <div class="bg-sub l-column l-column--4">
                <h3>作業コントロール</h3>
                <div class="control-btn">

                </div>
                <div class="timer">

                </div>
            </div>
        </div>

        {{!-- パネル下部 --}}
        <section class="home-info card rounded-lg bg-accent mt-4">

            <div class="home-info__grid">
                {{!--メモ欄 --}}
                <section class="memo l-row l-row--gap" aria-label="メモ・アイデア・ログ">
                    {{!-- インプット入力フォーム --}}
                    <form id="memo-form" class="memo__form l-column l-column--3 py-4 px-4">
                        <textarea id="memo-input" class="memo__input w-full" rows="3" maxlength="120"
                            placeholder="今日やることを追加"></textarea>

                        {{!-- 保存ボタンと削除ボタン --}}
                        <div class="memo__actions">
                            <button type="submit" class="memo__save py-4 px-4 rounded"><i
                                    class="fa-solid fa-check"></i></button>
                            <button type="button" id="memo-clear" class="memo__clear py-4 px-4 rounded"><i
                                    class="fa-solid fa-trash"></i></button>
                        </div>
                    </form>


                </section>
            </div>
        </section>

    </div>

</div>